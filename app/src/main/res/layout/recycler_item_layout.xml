<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="15dp"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recyclerViewImageTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_weight="5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="5"
            >

            <TextView
                android:id="@+id/recyclerViewTextItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item name"
                android:textSize="28sp"
                />

            <TextView
                android:id="@+id/recyclerViewTextItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item price"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/recyclerViewTextItemLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item location"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/recyclerViewTextSellerTrustNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seller trusted point"
                android:gravity="bottom"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x people visited"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.01"
            android:background="#555555"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="report"
            android:textAlignment="center"
            />

    </LinearLayout>


</LinearLayout>