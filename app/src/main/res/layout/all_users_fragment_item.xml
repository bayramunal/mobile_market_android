<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/allUserPhoto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:src="@drawable/placeholder"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/allUserPhoto"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/allUsersDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user display name"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/allUsersStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allUsersDisplayName"
                android:layout_marginTop="5dp"
                android:text="user status"
                android:textStyle="italic"
                android:textSize="10sp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
